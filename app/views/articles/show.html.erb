<h1><%= @article.title %></h1>

<p>
	<%= @article.text %>
</p>

<hr/>
<h3>Comments</h3>

<% @article.comments.each do |comment| %>
	
	<b><%= comment.author %></b>
	<p><%= comment.body %></p>
	<small><%= comment.created_at %></small><br/>
	<hr/>
<% end %>

<h3>Add comments</h3>

<p>
<%= form_for([@article, @article.comments.build]) do |f| %>
<p>
	<%= f.label :author %><br/>
	<%= f.text_field :author %>
</p>
<p>
	<%= f.label :body %><br/>
	<%= f.text_area :body %>
</p>

<p>
	<%= f.submit %>
</p>
	<% end %>
</p>