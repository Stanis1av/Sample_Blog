<article class="card mb-3 post post-<%= post.id %>">
    <div class="card-header">
        <small class="d-inline-block mb-3 text-secondary border-bottom">Posted by: <b><%= post.user.username %></b> <%= time_ago_in_words(post.created_at) %> ago.</small>
        <h3 class="mb-0"><%= post.title %></h3>
    </div>
    <div class="card-body">
        <p class="card-text"><%= post_excerpt(post) %></p>
        <hr/>
        <p>
          Теги:
          <% post.tags.each do |tag| %>
            <%= link_to tag.name, tag_path(tag) %>
          <% end %>
        </p>
        <%= link_to "Read More", post_path(post), class: "btn btn-sm btn-outline-primary" %>
    </div>
</article>