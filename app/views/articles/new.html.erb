<h1>New Articles</h1>

<%= form_for :article, url: articles_path do |f| %>
<p>
	<%= f.label :title %><br/>
	<%= f.text_field :title, class: "form-control col-5" %>
</p>
<p>
	<%= f.label :text %><br/>
	<%= f.text_area :text, class: "form-control col-7", rows: 5 %>
</p>

<p>
	<%= f.submit class: "btn btn-primary" %>
</p>
	<% end %>