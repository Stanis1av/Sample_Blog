<% if @post.comments.empty? %>
	<h3>No Comments<h3>
	<hr/>
<% else %>

	<h3>Comments (<%= @post.comments.size %>)</h3>
<!-- <div id="comments" class="card-body"> -->
	<% @post.comments.each do |comment| %>
		
		<p><b><%= comment.author_name %></b>, said: </p>
		<p><%= comment.body %></p>
		<p>Добавлено <%= distance_of_time_in_words(comment.post.created_at, comment.created_at) %> назад</p><br/>
		<hr/>
	<% end %>
<!-- </div> -->
<% end %>


